alias zshconfig="vim $HOME/.zshrc"

alias dotfiles="code $HOME/Developer/dotfiles"

# system commands
unalias -m ls
alias eza="eza --icons --color=auto --group-directories-first"
alias ls="eza"

alias top="btop"
alias cat="bat -pp"

alias copypath="pwd | tr -d '\n' | pbcopy"

# docker
alias dps="docker ps -a"
alias di="docker images"

# neovim
alias vi="nvim"
alias vim="nvim"

# kubernetes
# https://github.com/ahmetb/kubectl-alias
[ -f ~/.kubectl_aliases ] && source ~/.kubectl_aliases

alias krew="kubectl krew"

# suffix aliases
alias -s html="open"
